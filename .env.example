# ============================================
# ASSISTENTE IA WILLIAM - CONFIGURAÇÕES
# ============================================

# === API KEYS (OBRIGATÓRIO) ===
# Obtenha suas chaves em:
# Groq: https://console.groq.com/keys
# Anthropic: https://console.anthropic.com/
# OpenAI: https://platform.openai.com/api-keys

GROQ_API_KEY=your_groq_key_here
ANTHROPIC_API_KEY=your_claude_key_here
OPENAI_API_KEY=your_openai_key_here

# === PROVEDOR IA PADRÃO ===
DEFAULT_AI_PROVIDER=groq
DEFAULT_MODEL=llama-3.3-70b-versatile

# Modelos alternativos:
# Groq: llama-3.3-70b-versatile, mixtral-8x7b-32768, gemma2-9b-it
# Claude: claude-3-5-sonnet-20241022, claude-3-opus-20240229
# OpenAI: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo

# === TELEGRAM BOT (OPCIONAL) ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_IDS=

# === WHATSAPP BOT (OPCIONAL) ===
WHATSAPP_ENABLED=false

# === CAMINHOS E ARMAZENAMENTO ===
MEMORY_DB_PATH=./data/memory/memory.db
LOG_FILE=./data/logs/william.log
CACHE_DIR=./data/cache
EXPORTS_DIR=./data/exports

# === LOGGING ===
LOG_LEVEL=INFO
# Opções: DEBUG, INFO, WARNING, ERROR, CRITICAL

# === API REST SERVER ===
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change_this_to_a_random_secret_key_for_production
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# === FUNCIONALIDADES ===
ENABLE_WEB_SCRAPING=true
ENABLE_FILE_OPERATIONS=true
ENABLE_SYSTEM_OPERATIONS=true
ENABLE_AUTOMATION=true
ENABLE_MEMORY=true

# === LIMITES E SEGURANÇA ===
MAX_FILE_SIZE_MB=100
MAX_CONCURRENT_TASKS=5
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# === MEMÓRIA E CONTEXTO ===
MAX_CONTEXT_LENGTH=4000
MAX_MEMORY_ITEMS=100
ENABLE_SEMANTIC_SEARCH=true

# === WEB SCRAPING ===
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# === ANÁLISE DE DADOS ===
DEFAULT_CHART_FORMAT=png
CHART_DPI=300
CHART_THEME=darkgrid

# === AMBIENTE ===
ENVIRONMENT=development
# Opções: development, production, testing
