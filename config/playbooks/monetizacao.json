{
  "name": "monetizacao_completa",
  "display_name": "Monetizacao Completa",
  "description": "Monta toda a estrutura de vendas: estrategia, copy, funil, leads e app",
  "trigger_patterns": [
    "(?:quero|preciso)\\s+(?:monetizar|faturar)\\s+(.+)",
    "(?:montar|criar)\\s+(?:maquina|estrutura)\\s+(?:de\\s+)?(?:vendas|monetizacao)\\s+(.+)",
    "como\\s+(?:monetizar|faturar)\\s+(?:com\\s+)?(.+)"
  ],
  "variables": ["nicho"],
  "steps": [
    {
      "action": "skill_business",
      "description": "defina estrategia para {topic}",
      "params": {"skill": "estrategia"},
      "agent": "strategy_agent",
      "timeout": 30
    },
    {
      "action": "skill_business",
      "description": "gere script para {topic}",
      "params": {"skill": "conversao"},
      "agent": "conversion_agent",
      "timeout": 30
    },
    {
      "action": "skill_business",
      "description": "encontre clientes {topic}",
      "params": {"skill": "prospeccao"},
      "agent": "business_agent",
      "timeout": 60
    },
    {
      "action": "skill_business",
      "description": "crie funil para {topic}",
      "params": {"skill": "n8n"},
      "agent": "n8n_agent",
      "timeout": 60
    }
  ],
  "category": "monetizacao",
  "enabled": true
}
